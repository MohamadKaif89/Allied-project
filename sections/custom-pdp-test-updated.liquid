        e.preventDefault();

        const text = addToCartBtn.innerText;
        addToCartBtn.innerText = 'Adding...';
        addToCartBtn.disabled = true;

        let items = [];

        /* -------- Main product -------- */
        const mainVariantId = addToCartBtn.dataset.mainVariant;
        const mainQtyInput = document.querySelector('.qty input');
