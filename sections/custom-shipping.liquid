<section class="shipping">
    <div class="shipping-container">
        <div class="shipping-row">

            {% for block in section.blocks %}
            <div class="shipping-item">

                <div class="shipping-logo">
                    {% if block.settings.ship_icon != blank %}
                    <img src="{{ block.settings.ship_icon | image_url }}" alt="icon" width="" height="">
                    {% endif %}
                </div>

                <div class="shopping-text">
                    <p>{{ block.settings.text_1 }}</p>
                    <p>{{ block.settings.text_2 }}</p>
                </div>

            </div>
            {% endfor %}

        </div>
    </div>
</section>

{% schema %}
{
"name": "Shipping Section",
"settings": [],
"blocks": [
{
"type": "shipping_item",
"name": "Shipping Item",
"settings": [
{
"type": "image_picker",
"id": "ship_icon",
"label": "Shipping Icon"
},
{
"type": "text",
"id": "text_1",
"label": "Text Line 1",
"default": "Free shipping"
},
{
"type": "text",
"id": "text_2",
"label": "Text Line 2",
"default": "On all orders over $100"
}
]
}
],
"presets": [
{
"name": "Shipping Section"
}
]
}
{% endschema %}

<style>
    .shipping{
           background-color: #5F4B8B;
    margin: auto;
    max-width: 1440px;
    margin-top: -24px;
    
    }
    .shipping-container{
        width: 100%;
    max-width: 1260px;
    margin: auto;
    }
    .shipping-row{
        display: flex;
            gap: 29px;
    }

    .shipping-item{
       width: 100%;
    max-width: 291px;
    display: flex;
    gap: 23px;
    }

    .shopping-text p:nth-child(1) {
    font-size: 15px;
    font-weight: 700;
    line-height: 24px;
    letter-spacing: 0;
     font-family: "DM Sans", sans-serif;
     color: #FFFFFF;

}

.shopping-text p:nth-child(2) {
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0;
      font-family: "DM Sans", sans-serif;
       color: #FFFFFF;
 
}
.shipping-logo{
        display: flex;
    align-items: center;

}
.shipping-logo img{
        width: 48px;
    height: 48px;
}

@media (max-width: 1024px) {

  .shipping-row {
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .shipping-item {
    max-width: 45%;
    justify-content: center;
  }

  .shopping-text p:nth-child(1) {
    font-size: 1rem; /* 16px */
  }

  .shopping-text p:nth-child(2) {
    font-size: 1rem;
  }

  .shipping-logo img {
    width: 40px;
    height: 40px;
  }
}

@media (max-width: 768px) {

  .shipping {
    margin-top: 0;
    padding: 20px 0;
  }

  .shipping-row {
    flex-direction: column;
    align-items: center;
    gap: 25px;
  }

  .shipping-item {
    max-width: 100%;
    justify-content: center;
    text-align: center;
  }

  .shipping-logo img {
    width: 36px;
    height: 36px;
  }

  .shopping-text p:nth-child(1) {
    font-size: 0.95rem;
  }

  .shopping-text p:nth-child(2) {
    font-size: 0.95rem;
  }
}

@media (max-width: 480px) {

  .shipping-row {
    gap: 20px;
  }

  .shipping-logo img {
    width: 30px;
    height: 30px;
  }

  .shopping-text p:nth-child(1),
  .shopping-text p:nth-child(2) {
    font-size: 0.85rem;
    line-height: 1.4;
  }
}



</style>
